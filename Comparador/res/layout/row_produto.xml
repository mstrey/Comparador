<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
  	xmlns:android="http://schemas.android.com/apk/res/android" 
  	android:orientation="horizontal" 
  	android:layout_width="fill_parent" 
  	android:layout_height="fill_parent">
    <ImageView
		android:text="Foto"
		android:id="@+id_produto/foto" 
   		android:layout_marginRight="5dp"
   		android:layout_width="45dp" 
   		android:layout_height="50dp">
   	</ImageView>
	<LinearLayout 
	  	android:orientation="vertical" 
	  	android:layout_width="fill_parent" 
	  	android:layout_height="fill_parent">
		
		<TextView 	
   			android:text="Descricao" 
       		android:layout_marginRight="5dp"
	  		android:id="@+id_produto/txtDescricao" 
       		android:layout_width="fill_parent" 
       		android:layout_height="25dp" >
       	</TextView> 

		<LinearLayout 
		  	android:orientation="horizontal" 
		  	android:layout_width="fill_parent" 
		  	android:layout_height="wrap_content">
			
			<ImageView
		  		android:text="iconFavorite"
		  		android:layout_marginRight="5dp"
	  			android:id="@+id_produto/iconFavorito" 
	       		android:src="@drawable/favorito_off"
		      	android:layout_width="25dp" 
		      	android:layout_height="25dp">
	      	</ImageView>
		    
			<TextView 	
    			android:text="##.###,##" 
        		android:id="@+id_produto/txtPreco" 
        		android:gravity="right"
        		android:layout_marginRight="5dp"
        		android:layout_width="100dp" 
        		android:layout_height="25dp" >
        	</TextView>
			
			<TextView 	
    			android:text="0 minutos atrÃ¡s" 
        		android:id="@+id_produto/txtTempo" 
        		android:gravity="right"
        		android:layout_marginRight="5dp"
        		android:layout_width="120dp" 
        		android:layout_height="25dp" >
        	</TextView>
		
		</LinearLayout>
	    
	</LinearLayout>

</LinearLayout>
